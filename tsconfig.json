{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2016",
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": "src",
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
      "@domain/*": ["domain/*"],
      "@infra/*": ["infra/*"],
      "@shared/*": ["shared/*"],
      "@useCases/*": ["useCases/*"],
      "@projectTypes/*": ["typings/*"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "__tests__", "src/**/*.spec.ts"],
}
